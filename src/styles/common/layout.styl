@require '../_vars'

body
	overflow-x hidden

	@supports (overflow-y overlay)
		overflow-y overlay

.header
	position fixed
	top 0
	right 0
	left 0
	z-index 10

.header__inner
	display flex
	align-items center
	padding 0 40px
	height 60px
	background-color $cl-grey-1

	& > *
		flex-shrink 0

	+media(mobile)
		padding 0 20px

.header__logo
	margin-right 40px
	color $cl-white

.header__slogan
	margin-right 40px
	max-width 160px
	line-height 16px
	font-family $ff-promo
	font-weight 300
	font-size 14px
	color $cl-grey-5

	+media(mobile)
		display none

.header__nav
	// margin 0 auto

	ul
		display flex
		align-items center

	li
		& + li
			margin-left 20px

	a
		@extend $text-navitem
		text-decoration none
		text-transform uppercase
		color $cl-white

		&:hover
			text-decoration underline

	+media(tablet mobile)
		display none

.header__phone
	margin-left auto
	text-decoration none
	color $cl-grey-5

.header__menu-button
	margin-left 40px
	padding 0
	color $cl-grey-5
	background-color transparent
	border 0
	outline none

.section
	display flex
	justify-content center
	align-items stretch

	&._dark
		background-color $cl-grey-2
		color $cl-white

		.section__desc
			color $cl-grey-4

	&._light
		background-color $cl-grey-5

	&._md
		.container
			min-height 600px

			+media(tablet-sm mobile)
				min-height auto

	&._lg
		.container
			min-height 800px

			+media(tablet-sm mobile)
				min-height auto


.section__half
	display flex
	justify-content center
	align-items center
	flex-shrink 0
	padding 20px
	width 50%
	min-height 100%

	+media(tablet-sm mobile)
		width 100%
		min-height auto
		padding 40px 20px

	&._img
		@extend $style-bg-cover

		&:not([style])
			@extend $style-dummy

		+media(tablet-sm mobile)
			min-height 300px

	&._slider
		align-items stretch
		padding 0

		.swiper-container
			width 100%
			min-height 400px

	&._map
		align-items stretch
		padding 0

		iframe
			display block
			width 100%
			min-height 100%

	.section__title
		margin-bottom 36px
		text-align left

		+media(mobile)
			margin-bottom 24px

	.section__action
		margin-top 36px

.section__desc
	@extend $text-lg
	color $cl-grey-3

	& + .section__desc
		margin-top 8px

	+media(mobile)
		line-height 1.3
		font-size 16px

.section__half-inner
	padding 80px 0
	max-width 80%
	min-width 465px

	+media(tablet mobile)
		min-width auto

	+media(mobile)
		padding 0
		max-width 100%

.container
	display flex
	justify-content center
	align-items center
	margin 0 auto
	padding 20px
	max-width 1160px
	width 100%
	min-height 400px

	+media(tablet-sm mobile)
		min-height auto
		flex-direction column

	+media(mobile-md mobile-sm)
		padding 20px 12px

	&._fluid
		max-width 100%

	&._clean
		padding 0


.footer
	padding 80px 0 120px
	background-color $cl-grey-1
	color $cl-white

.footer__inner
	display flex
	flex-direction column

.footer__nav
	display flex
	align-items flex-start

	+media(tablet-sm mobile)
		flex-direction column

.footer__legal
	display flex
	align-items stretch
	margin-top 80px

	+media(tablet-sm mobile)
		flex-direction column

.footer__title
	display block
	margin-bottom 24px
	text-transform uppercase
	line-height 16px
	font-family $ff-promo
	font-weight 700
	font-size 14px
	color $cl-grey-3

.footer__list
	& + .footer__list
		margin-left 200px

		+media(tablet-sm mobile)
			margin-top 32px
			margin-left 0

		+media(mobile)
			margin-right 0

	li
		@extend $text-navitem
		text-transform uppercase

		&:not(:last-child)
			margin-bottom 16px

	a
		text-decoration none
		color inherit

		&:hover
			text-decoration underline

.footer__list-inner
	columns 2

	&._sections
		column-gap 160px

		+media(tablet-sm)
			column-gap 80px

		+media(mobile)
			columns 1
			column-gap 0

	&._categories
		column-gap 40px

		+media(mobile-md mobile-sm)
			columns 1
			column-gap 0



.footer__data
.footer__policy
	display flex
	flex-direction column
	color $cl-grey-3

.footer__policy
	margin-left 200px

	a
		color $cl-grey-3
	
	+media(tablet-sm mobile)
		margin-top 32px
		margin-left 0