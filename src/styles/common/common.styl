*
	box-sizing border-box

::-webkit-scrollbar
	height 12px
	width 12px
	background transparent

::-webkit-scrollbar-thumb
	border-radius 10px
	cursor pointer
	width 12px
	border 3px solid rgba(255, 255, 255, 0)
	background-clip padding-box
	background-color rgba(#35414C, .3)
	&:hoverol
		background-color rgba(#2D4668, .4)
		cursor pointer

.swiper-button-prev
.swiper-button-next
	display flex
	justify-content center
	align-items center
	margin-top 0
	width 80px
	height 80px
	font-size 52px
	background-color $cl-grey-2-07
	color $cl-white
	transition .2s background-color ease

	&._light
		background-color $cl-grey-4-06
		color $cl-grey-1

		&:hover
			background-color $cl-grey-4

	&:hover
		background-color $cl-grey-2

	.fa
		font-size inherit

	&::after
		content ''

	+media(tablet-sm mobile)
		width 40px
		height 40px
		font-size 28px


.swiper-button-prev
	left 0

.swiper-button-next
	right 0

.swiper-container
	min-height 320px

.swiper-container-horizontal
	& > .swiper-pagination-bullets
		.swiper-pagination-bullet
			&:not(:last-child)
				margin 0 32px 0 0

.swiper-pagination
	bottom 40px

	.swiper-pagination-bullet
		width 12px
		height @width
		background transparent
		border 1px solid $cl-white
		opacity 1

	.swiper-pagination-bullet-active
		background $cl-white


.first-screen-slider
	padding-top 100px
	padding-bottom 80px
	width 100%
	min-height 80vh

	.swiper-slide
		padding 0 40px

.fullpage-slider
	width 100%
	height 100%

	.swiper-slide
		width 90%
		@extend $style-dummy
		color $cl-white

.props
	display flex
	justify-content center
	align-items center

	&._lg
		.props__item
			min-height 80px
		.props__value
			@extend $text-section-title

	&._light
		color $cl-white

		.props__desc
			color $cl-white

	&._left
		justify-content flex-start

	+media(mobile)
		flex-direction column

.props__item
	display flex
	flex-direction column
	justify-content center
	align-items center
	padding 12px
	min-width 120px
	min-height 60px

	&._title
		@extend $text-section-title
		flex-shrink 0
		max-width 240px
		padding-right 40px

		+media(tablet-sm mobile)
			line-height 1.3
			font-size 24px
			min-height auto
			padding-right 12px

	&:not(:last-child)
		border-right-width 1px
		border-right-style solid
		border-right-color $cl-grey-4

		+media(mobile)
			border 0

.props__value
	@extend $text-benefit-title

	+media(tablet-sm mobile)
		line-height 1
		font-size 24px

.props__desc
	@extend $text-benefit-desc
	color $cl-grey-3