*
	box-sizing border-box

::-webkit-scrollbar
	height 12px
	width 12px
	background $cl-grey-1

::-webkit-scrollbar-thumb
	border-radius 10px
	cursor pointer
	width 12px
	border 3px solid rgba(255, 255, 255, 0)
	background-clip padding-box
	background-color $cl-grey-5
	&:hoverol
		background-color rgba(#2D4668, .4)
		cursor pointer

.backdrop
	@extend $style-backdrop

	&._dark
		opacity .75

.page-backdrop
	@extend $style-backdrop
	position fixed
	display none
	z-index 50

.mobile-menu
	position fixed
	top 0
	right 0
	bottom 0
	left auto
	padding 52px 40px
	width 300px
	background-color $cl-white
	box-shadow $shadow
	overflow-y auto
	transform translateX(100%)
	transition transform .4s
	z-index 50

	&._visible
		transform translateX(0)

	.header__nav
		padding 0
		color $cl-text

		ul
			flex-direction column
			align-items flex-start

		li
			& + li
				margin-top 12px
				margin-left 0

		.inner
			display flex
			position static
			margin 8px 0 0 24px
			padding 0 0 0 12px
			box-shadow none
			border-left 1px solid $cl-grey-4
			transform none
			background-color transparent

		a
		span
			color $cl-black

		+media(tablet mobile)
			display flex


.mobile-menu__close
	position absolute
	top 16px
	right 16px
	color $cl-black


.swiper-button-prev
.swiper-button-next
	display flex
	justify-content center
	align-items center
	margin-top 0
	width 80px
	height 80px
	font-size 52px
	background-color $cl-grey-2-07
	color $cl-white
	transform translateY(-50%)
	transition .2s background-color ease
	opacity .5
	z-index 5

	&._light
		background-color $cl-grey-4-06
		color $cl-grey-1

		&:hover
			background-color $cl-grey-4

	&.swiper-button-disabled
		opacity .5

	&:hover
		background-color $cl-grey-2

	.fa
		font-size inherit

	&::after
		content ''

	+media(tablet-sm mobile)
		width 60px
		height @width
		font-size 28px


.swiper-button-prev
	left 0

.swiper-button-next
	right 0

.swiper-container
	min-height 320px

	+media(mobile-md mobile-sm)
		min-height 240px

.swiper-container-horizontal
	& > .swiper-pagination-bullets
		.swiper-pagination-bullet
			&:not(:last-child)
				margin 0 32px 0 0

.swiper-pagination
	bottom 40px

	+media(tablet-sm mobile)
		display none

	.swiper-pagination-bullet
		width 12px
		height @width
		background transparent
		border 1px solid $cl-white
		opacity 1

	.swiper-pagination-bullet-active
		background $cl-white


.first-screen-slider
	width 100%
	height 100%

	.swiper-pagination
		bottom 80px

	.section__action
		margin-top 40px

.first-screen-slide
	@extend $style-bg-cover
	display flex
	flex-direction column
	justify-content center
	align-items center
	padding 100px 40px 80px
	height 100%

	+media(tablet-sm mobile)
		padding-top 140px

.first-screen-slide
	& > *:not(.backdrop)
		z-index 1

.fullpage-slider
	width 100%
	height 800px

	+media(desktop-md desktop-sm tablet-lg)
		height 640px

	+media(tablet-sm)
		height 400px
		min-height @height

	+media(mobile)
		height 240px
		min-height @height

	+media(mobile-sm)
		height 200px
		min-height @height

.fullpage-slide
	display flex
	justify-content center
	align-items center
	height 100%

	img
		@extend $style-img-cover

.first-screen-props
	display flex
	justify-content center
	align-items center
	margin-top 160px

	+media(desktop-md desktop-sm tablet-lg)
		margin-top 80px

	+media(tablet-sm mobile)
		margin-top 40px

		.props__item
			&:first-child
				border 0

.props
	display flex
	justify-content center
	align-items center

	&._lg
		.props__item
			min-height 80px

			&._title
				+media(tablet-sm mobile)
					min-height auto

		.props__value
			line-height 44px
			font-family $ff-promo
			font-size 36px

			+media(tablet-sm mobile)
				line-height 1.2
				font-size 24px

	&._light
		color $cl-white

		.props__desc
			color $cl-white

	&._left
		justify-content flex-start

	+media(tablet-sm mobile)
		flex-wrap wrap

.props__item
	display flex
	flex-direction column
	justify-content center
	align-items center
	padding 12px
	min-width 120px
	min-height 60px
	text-align center

	+media(tablet-sm mobile)
		min-width 80px

	+media(mobile-sm)
		min-width auto

	&._title
		@extend $text-section-title
		flex-shrink 0
		max-width 300px
		padding-right 40px

		&:only-child
			padding-right 12px

		+media(tablet-sm mobile)
			line-height 1.3
			font-size 24px
			padding-right 12px
			min-height auto
			max-width 100%
			width 100%

	&:not(:last-child)
		border-right-width 1px
		border-right-style solid
		border-right-color $cl-grey-4

.props__value
	line-height 24px
	font-family $ff-promo
	font-weight 500
	font-size 24px

	+media(tablet-sm mobile)
		line-height 1.2

	+media(mobile-sm)
		font-size 20px

.props__desc
	@extend $text-benefit-desc
	color $cl-grey-3

.form
	display none
	width 600px
	color $cl-white
	background $cl-grey-2

.form__title
	margin-bottom 40px
	text-align center
	line-height 1
	font-size 24px

	+media(mobile-md mobile-sm)
		font-size 20px

.form__content
	display flex
	flex-direction column
	justify-content flex-start
	align-items center
	margin auto
	max-width 400px
	width 100%

	input
		&:not(:last-child)
			margin-bottom 52px

.form__button
	margin-top 24px

input
	&[type="text"]
	&[type="tel"]
	&[type="email"]
		display block
		box-sizing border-box
		padding 0 4px
		width 100%
		height 40px
		line-height @height
		font-family $ff-promo
		font-weight 300
		font-size 16px
		color $cl-white
		background-color transparent
		border 0
		border-bottom 1px solid $cl-white
		border-radius 0
		-webkit-appearance none
