@require '../_vars'

.section
	&._first-section
		.h1
		.h3
			text-align center

	&._socials
		.row
			width 100%
			height 100%

			+media(tablet mobile)
				height auto

		.social
			&._in
				background-color $cl-grey-4

		.social__inner
			display flex
			flex-direction column
			justify-content center
			align-items center
			padding 32px
			height 100%

		.social__icon
			margin-bottom 4px

		.social__amount
			@extend $text-h1

			+media(mobile)
				font-size 36px
				line-height 1.2

		.social__name
			@extend $text-sm
			margin-top 6px
			color $cl-grey-3

	&._benefits
		.benefit
			text-align center

			+media(mobile)
				text-align left

		.benefit__img
			margin 44px auto
			width 120px
			height 60px
			background-color $cl-grey-5
			border 1px solid $cl-grey-4
			border-radius 4px

			+media(mobile)
				margin-bottom 24px

		.benefit__desc
			@extend $text
			margin-top 24px
			color $cl-grey-3

			+media(mobile)
				margin-top 8px
				line-height 1.3
				font-size 14px

	&._reviews
		padding 40px 0

	&._showroom
		+media(tablet-sm mobile)
			margin-top 40px

	&._warm-house
		padding 60px 0

		+media(tablet-sm mobile)
			margin-top 32px
			padding 0 0 60px
		
		.video
			margin-top 24px
			margin-bottom 60px

			+media(tablet-sm mobile)
				margin-bottom 32px

	&._slider
		+media(tablet-sm mobile)
			margin-bottom 40px

	&._index-desc
		._img
			+media(mobile-lg)
				height 240px

			+media(mobile-md)
				height 200px

			+media(mobile-sm)
				height 160px

.new-project-slider
	+media(mobile)
		min-height 0 !important

	+media(mobile-lg)
		height 240px

	+media(mobile-md mobile-sm)
		height 200px

	.swiper-slide
		@extend $style-dummy

.new-project
	display flex
	justify-content center
	align-items center
	height 100%

	img
		@extend $style-img-cover

.warm-house
	text-align center

.creator-section
	@extend $style-bg-cover
	min-height 400px
	background-image url('./../../static/img/creator.jpg')
	background-position 50% 0

	.container
		background linear-gradient(180deg, rgba(0, 0, 0, 0) 50%, rgba(0, 0, 0, 0.6) 100%)

		+media(tablet-sm mobile)
			background linear-gradient(180deg, rgba(0, 0, 0, 0) 10%, rgba(0, 0, 0, 0.9) 100%)

.creator
	display flex
	flex-direction column
	align-items flex-end
	margin auto 160px 120px auto
	text-align right

	.section__title
		text-align right

	+media(tablet-lg)
		margin auto 80px 80px auto

	+media(tablet-sm)
		margin auto 32px 32px auto

	+media(mobile)
		margin 120px 12px 32px

.projects
	display flex
	flex-direction column
	align-items stretch
	width 100%
	text-align center

.projects__list
	margin 48px 20px

	+media(mobile)
		margin 20px 0

.preview
	display flex
	flex-direction column
	justify-content flex-start
	align-items stretch
	text-align left
	border-radius 4px
	box-shadow $shadow

.preview__top
.preview__img
.preview__props
.preview__about
	display flex
	justify-content flex-start
	width 100%

.preview__top
	flex-wrap wrap
	padding 32px 24px

	+media(mobile)
		padding 20px 16px

.preview__name
	flex-grow 1

.preview__price
	flex-shrink 0

.preview__name
.preview__price
	@extend $text-project-title

	+media(mobile)
		line-height 1
		font-size 16px

.preview__desc
	@extend $text-sm
	margin-top 4px
	width 100%
	color $cl-grey-3

	+media(mobile)
		margin-top 8px

.preview__img
	flex-shrink 0
	height 268px

	img
		@extend $style-img-cover

.preview__props
	justify-content center
	padding 16px 24px 8px

	+media(tablet-sm mobile)
		padding 16px 16px 8px

		.props__item
			flex-grow 1

			&:first-child
				padding-left 0

			&:last-child
				padding-right 0

.preview__about
	padding 8px 24px

	+media(mobile)
		flex-direction column
		padding 4px 16px

.preview__about-left
.preview__about-right
	width 50%

	+media(mobile)
		margin-right auto
		margin-bottom 24px
		margin-left auto
		max-width 320px
		width 100%

.preview__about-left
	display flex
	flex-direction column
	margin-right 20px

	+media(mobile)
		margin-right auto

.preview__about-value
	line-height 20px
	font-family $ff-promo
	font-weight 600
	font-size 14px
	color $cl-grey-1

	&:not(:first-child)
		margin-top 12px

.preview__about-desc
	text-transform lowercase
	line-height 10px
	font-size 10px
	color $cl-grey-3

.preview__more
	display flex
	justify-content center
	align-items center
	padding 8px 24px 32px

	+media(mobile)
		padding 4px 24px 24px

	.button
		margin 0 auto

.reviews
	text-align center
	width 100%

.reviews-slider
	margin-top 36px

	+media(tablet-sm mobile)
		margin-top 12px

.review
	display flex
	flex-direction column
	justify-content flex-start
	align-items stretch
	margin-bottom 20px
	width 100%
	height 520px
	overflow hidden
	border-radius 4px
	box-shadow $shadow

	+media(mobile)
		margin 12px auto
		max-width 320px
		height 300px

		+media(mobile-md mobile-sm)
			max-width 270px

.review__img
	display flex
	flex-grow 1
	color $cl-white
	background linear-gradient(180deg, rgba(0, 0, 0, 0.25) 50%, rgba(0, 0, 0, 0.8) 92.97%)

	img
		@extend $style-img-cover

.review__title
	flex-shrink 0
	padding 32px 24px
	text-align center
	line-height 32px
	font-family $ff-promo
	font-size 24px

	+media(mobile)
		padding 24px
		min-height 60px
		line-height 1.3
		font-size 15px


.showrooms
	padding 20px 0
	width 100%
	text-align center

.showrooms-slider
	margin-top 36px

.showroom
	display flex
	position relative
	margin 0 auto
	max-width 400px
	width 100%
	height 600px
	background-color $cl-grey-2
	z-index 1

	+media(tablet-sm mobile)
		max-width 320px
		height 400px

	+media(mobile-md mobile-sm)
		max-width 260px
		height 300px

.showroom__img
	@extend $style-cover
	z-index 1

	&::before
		content ''
		@extend $style-cover
		background linear-gradient(180deg, rgba(0, 0, 0, 0.25) 50%, rgba(0, 0, 0, 0.8) 92.97%)
		z-index 1

	img
		@extend $style-img-cover

.showroom__desc
	position relative
	display flex
	flex-direction column
	justify-content flex-start
	align-items center
	margin auto auto 0
	padding 40px 24px
	text-align center
	z-index 2

.showroom__name
	max-width 400px
	line-height 28px
	font-family $ff-promo
	font-weight 500
	font-size 20px
	color $cl-white

	+media(mobile)
		line-height 1.2
		font-size 14px

.showroom__link
	@extend $text-h5
	margin-top 20px
	text-decoration none
	font-weight 300
	color $cl-white
	border-bottom 1px solid

	+media(mobile)
		line-height 1.2
		font-size 14px