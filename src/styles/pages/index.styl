@require '../_vars'

.section
	&._first-section
		.h3
			text-align center

	&._socials
		.row
			height 100%

		.social
			&._in
				background-color $cl-grey-4

		.social__inner
			display flex
			flex-direction column
			justify-content center
			align-items center
			padding 32px
			height 100%

		.social__icon
			margin-bottom 4px

		.social__amount
			@extend $text-h1

		.social__name
			@extend $text-sm
			margin-top 6px
			color $cl-grey-3

	&._benefits
		.benefit
			text-align center

			+media(mobile)
				text-align left

		.benefit__img
			margin 44px auto
			width 120px
			height 60px
			background-color $cl-grey-5
			border 1px solid $cl-grey-4
			border-radius 4px

			+media(mobile)
				margin-bottom 24px

		.benefit__desc
			@extend $text
			margin-top 24px
			color $cl-grey-3

			+media(mobile)
				margin-top 16px
				line-height 1.3
				font-size 14px


.new-project-slider
	.swiper-slide
		@extend $style-dummy

.new-project
	display flex
	justify-content center
	align-items center
	height 100%

	img
		@extend $style-img-cover

.warm-house
	text-align center

.creator-section
	@extend $style-bg-cover
	background-image url('./../../static/img/creator.jpg')

	.container
		background linear-gradient(180deg, rgba(0, 0, 0, 0) 48.44%, rgba(0, 0, 0, 0.61) 100%);

.creator
	display flex
	flex-direction column
	align-items flex-end
	margin auto 160px 120px auto
	text-align right

	.section__title
		text-align right

	+media(tablet-lg)
		margin auto 80px 80px auto

	+media(tablet-sm)
		margin auto 32px 32px auto

	+media(mobile)
		margin 120px 12px 32px

.projects
	display flex
	flex-direction column
	align-items stretch
	width 100%
	text-align center

.projects__list
	margin 48px 20px

	+media(mobile)
		margin 48px 0

.preview
	display flex
	flex-direction column
	justify-content flex-start
	align-items stretch
	text-align left
	border-radius 4px
	box-shadow $shadow

.preview__top
.preview__img
.preview__props
.preview__about
	display flex
	justify-content flex-start
	width 100%

.preview__top
	flex-wrap wrap
	padding 32px 24px

.preview__name
	flex-grow 1

.preview__price
	flex-shrink 0

.preview__name
.preview__price
	@extend $text-project-title

.preview__desc
	@extend $text-sm
	margin-top 4px
	width 100%
	color $cl-grey-3

.preview__img
	flex-shrink 0
	height 268px

	img
		@extend $style-img-cover

.preview__props
	justify-content center
	padding 16px 24px 8px

.preview__about
	padding 8px 24px 32px

	+media(mobile)
		flex-direction column

.preview__about-left
.preview__about-right
	width 50%

	+media(mobile)
		margin-right auto
		margin-bottom 24px
		margin-left auto
		max-width 300px
		width 100%

.preview__about-left
	display flex
	flex-direction column
	margin-right 20px

	+media(mobile)
		margin-right auto

.preview__about-value
	line-height 20px
	font-family $ff-promo
	font-weight 600
	font-size 14px
	color $cl-grey-1

	&:not(:first-child)
		margin-top 12px

.preview__about-desc
	text-transform lowercase
	line-height 10px
	font-size 10px
	color $cl-grey-3

.reviews
	text-align center
	width 100%

.reviews-slider
	margin-top 36px
	padding 0 32px

	+media(tablet mobile)
		padding 0

.review
	display flex
	flex-direction column
	justify-content flex-start
	align-items stretch
	margin-bottom 20px
	width 100%
	height 520px
	overflow hidden
	border-radius 4px
	box-shadow $shadow

	+media(mobile)
		margin 12px auto
		max-width 320px
		height 320px

.review__img
	flex-grow 1
	color $cl-white
	background linear-gradient(180deg, rgba(0, 0, 0, 0.25) 50%, rgba(0, 0, 0, 0.8) 92.97%)

	img
		@extend $style-img-cover

.review__title
	display flex
	flex-shrink 0
	justify-content center
	align-items center
	padding 16px 24px
	min-height 160px
	text-align center
	line-height 32px
	font-family $ff-promo
	font-size 24px

	+media(mobile)
		min-height 80px
		line-height 1.3
		font-size 18px


.showrooms
	text-align center
	width 100%

.showrooms-slider
	margin-top 36px
	padding 0 32px

.showroom
	display flex
	position relative
	width 100%
	height 600px
	background-color $cl-grey-2
	z-index 1

.showroom__img
	@extend $style-cover
	z-index 1

	&::before
		content ''
		@extend $style-cover
		background linear-gradient(180deg, rgba(0, 0, 0, 0.25) 50%, rgba(0, 0, 0, 0.8) 92.97%)
		z-index 1

	img
		@extend $style-img-cover

.showroom__desc
	position relative
	display flex
	flex-direction column
	justify-content flex-start
	align-items center
	margin-top auto
	padding 40px 24px
	text-align center
	z-index 2

.showroom__name
	max-width 400px
	line-height 28px
	font-family $ff-promo
	font-weight 500
	font-size 20px
	color $cl-white

.showroom__link
	@extend $text-h5
	margin-top 20px
	text-decoration none
	color $cl-white
	border-bottom 1px solid